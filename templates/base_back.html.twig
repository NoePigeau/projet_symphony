<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Backoffice{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="backoffice">
        <header class="navbar-back">
                <figure>
                    <img src="{{ asset('images/logos/logo-black.svg') }}" alt="logo black">
                </figure>
                <nav class="links">
                    <ul><a href="{{ path('front_default_index') }}"> Homepage</a></ul>
                    <ul><a href="{{ path('admin_user_index') }}"> Users </a></ul>
                    <ul><a href="{{ path('admin_mission_index') }}"> Missions </a></ul>
                </nav>
                <div class="sign">
                    <a href="{{ path('register') }}"><img src="{{ asset('images/icones/signup.svg') }}" alt="signup"> Profil </a>
                    <a href="{{ path('app_logout') }}"><img src="{{ asset('images/icones/logout.svg') }}" alt="logo black">Logout</a>
                </div>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
