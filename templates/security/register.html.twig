{% extends 'base_front.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <div class="container-sign">
        {{ form_start(form, { 'attr' : { 'class': 'form-sign' } }) }}
        
            <h1 class="text-4xl">Sign up</h1>
            <div class="inputs">
                    <div class="input-group">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, { 'attr' : { 'class': 'input' }})}}
                    </div>
                    <div class="input-group">
                        {{ form_label(form.nickname, 'Nickname') }}
                        {{ form_widget(form.nickname)}}
                    </div>
                    <div class="input-group">
                        {{ form_label(form.firstname) }}
                        {{ form_widget(form.firstname)}}
                    </div>
                    <div class="input-group">
                        {{ form_label(form.lastname) }}
                        {{ form_widget(form.lastname)}}
                    </div>
                    <div class="input-group">
                        {{ form_label(form.plainPassword.first, 'Password') }}
                        {{ form_widget(form.plainPassword.first)}}
                    </div>
                    <div class="input-group">
                        {{ form_label(form.plainPassword.second, 'Confirm Password') }}
                        {{ form_widget(form.plainPassword.second) }}
                    </div>
                    <div class="input-group">
                        {{ form_label(form.emailNotify, 'I want to receive Email Notification') }}
                        {{ form_widget(form.emailNotify) }}
                    </div>
            </div>
            {{ form_errors(form) }}
            <input class="main-cta" type="submit" value="Sign up">
        {{ form_end(form) }}
    </div>
{% endblock %}
