{% extends 'base_back.html.twig' %}

{% block title %}Add new equipment{% endblock %}

{% block body %}
    <div>
        <a href="{{ path('admin_type_index') }}"> back to equipments list </a>
    </div>
    <div class="container-sign back">
        {{ form_start(form, { 'attr' : { 'class': 'form-sign' } }) }}
            <h1 class="text-3xl">Add type</h1>
            <div class="inputs">
                    <div class="input-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name)}}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="input-group">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description)}}
                        {{ form_errors(form.description) }}
                    </div>
                    <div class="input-group">
                        {{ form_label(form.stock) }}
                        {{ form_widget(form.stock)}}
                        {{ form_errors(form.stock) }}
                    </div>
                    <div class="input-group">
                        {{ form_label(form.imageFile, 'Equipment image') }}
                        {{ form_widget(form.imageFile)}}
                        {{ form_errors(form.imageFile) }}
                    </div> 
            </div>
            <input class="main-cta" type="submit" value="Add">
        {{ form_end(form) }}
    </div>
{% endblock %}
